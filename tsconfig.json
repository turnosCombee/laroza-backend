{
    "compilerOptions": {
      "module":"CommonJS",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "removeComments": true,
      "sourceMap": false,
      "target": "ES6",
      "outDir": "./dist",
      "rootDir": "./src",
      "allowSyntheticDefaultImports": true,
    },
    "include": ["src"],
    "exclude": [
      "node_modules/**/*",
      "dist/*",
      "src/static"
    ],
    "lib":["ES6"]
  }
  